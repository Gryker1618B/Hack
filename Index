    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom styles for the low-res, square aesthetic */
        @import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&display=swap');

        body {
            font-family: 'Roboto Mono', monospace;
            background-color: #0d111c;
            color: #d1d5db;
            /* Use padding for surrounding space, not margin */
            padding: 1rem; 
            box-sizing: border-box;
            overflow-y: hidden; /* CRITICAL: Prevent scrolling */
        }

        .hack-container {
            /* Full width, max-width centered, square borders */
            width: 95%; 
            max-width: 42rem;
            margin-left: auto;
            margin-right: auto;
            background-color: #0a0a0a; 
            border: 2px solid #38bdf8;
            padding: 16px;
            box-shadow: 0 0 10px #38bdf840; 
        }

        /* --- TIGHTER VERTICAL SPACING --- */
        .hack-container header { margin-bottom: 10px; padding-bottom: 8px; }
        .hack-container .space-y-2 > :not([hidden]) ~ :not([hidden]) {
            margin-top: 0.5rem; 
            margin-bottom: 0.5rem;
        }

        .hack-button {
            transition: background-color 0.1s, color 0.1s;
            border: 1px solid #d1d5db; 
            border-radius: 0; /* Extremely square look */
            user-select: none;
            filter: brightness(1.1);
        }

        /* --- Custom Slider Styling --- */
        #aggression-slider {
            -webkit-appearance: none;
            appearance: none;
            width: 100%;
            height: 10px; 
            background: transparent;
            border-radius: 0; 
            cursor: pointer;
            z-index: 10;
        }

        /* Thumb styles (The large circular thumb) */
        #aggression-slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 20px; 
            height: 20px;
            background: #38bdf8; 
            cursor: pointer;
            border-radius: 50%; /* CIRCLE SHAPE */
            border: 1px solid #0d111c;
            margin-top: -7px; /* Center vertically on the 6px track height */
        }
        
        #aggression-slider::-moz-range-thumb {
            width: 20px; 
            height: 20px;
            background: #38bdf8;
            cursor: pointer;
            border-radius: 50%;
            border: 1px solid #0d111c;
        }

        /* Track styles */
        #aggression-slider::-webkit-slider-runnable-track,
        #aggression-slider::-moz-range-track {
            width: 100%;
            height: 6px; 
            background: #2d3748; 
            border-radius: 0;
        }

        /* Disabled state styling for the slider (visibly dimmed) */
        #aggression-slider[disabled] {
            opacity: 0.35; /* Much lower opacity to clearly indicate disabled state */
            cursor: not-allowed;
        }
